type Presentation {
  id: ID! @unique
  presentationType: String! @default(value: "general")
  presentationDate: String!
  hpi: String
  physicalExam: String
  labsImaging: String
  summAssessment: String
  ddx: [String]
  title: String
  presentationLearning: String
  tags: [RotationTags]
  createdBy: User
  questions: [Question]
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  presentations: [Presentation]
  questions: [Question]
  learning: [Learning] @relation(name: "LearningCreator", onDelete: CASCADE)
  taggedLearning: [Learning]
    @relation(name: "TaggedLearning", onDelete: CASCADE)
  visible: Boolean! @default(value: "true")
  institution: String
}

type Question {
  id: ID! @unique
  questionStem: String!
  questionAnswerText: String
  answerOptions: [String]
  answers: [String]
  createdBy: User!
  presentation: Presentation!
}

type Learning {
  id: ID! @unique
  tags: [RotationTags]!
  title: String!
  whatWasLearned: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  createdBy: User! @relation(name: "LearningCreator")
  taggedUser: [User]! @relation(name: "TaggedLearning")
}
